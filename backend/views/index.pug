doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Tweet List
    style.
      .card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 300px;
      }
      .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
      }
      .container {
        padding: 2px 16px;
      }
      img {
        width: 100%;
        border-radius: 5px;
      }

  body
    h1 Tweets
    each tweet in tweets
      .card
        .container
          if tweet.description
          p= "Description: " + tweet.description
          p= "Time: " + tweet.createdAt
